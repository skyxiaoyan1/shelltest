#!/bin/sh
overlook()
{
    clear
    ls -al
}

#main()
echo "welcome !"
echo "####################################"
echo "minitools"
echo "####################################"
  


while true
do
read MAINCMD
# test the input
if [ MAINCMD != [f,l,e,F,L,E] ]
then
    echo err input
fi
case $MAINCMD in
F|f)
    overlook;;
l|L)
    overlook;;
e|E)
    exit 0;;
*)
    echo "eorr maincmd '$MAINCMD'";;
esac
done
